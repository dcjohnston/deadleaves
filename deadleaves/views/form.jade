section(id='form')
  div.row
    div.col-xs-4.col-xs-offset-2.progress-button-container
      button.progress-button.active 1
    div.col-xs-4.progress-button-container
      button.progress-button 2
  div.slick-container
    div.container.form-container
      div.row
        div.col-lg-12.text-center
          h2 Create
          hr.start-primary
      div.row
        div.col-lg-8.col-lg-offset-2
          form(method='post', action='/api/task', id='app-form')
            div.row.control-group
              div.form-group.col-xs-12.col-sm-6
                div.emoji-container
                  label(for='emoji') Emojis
                  input(type='text', id='emoji', name='emoji', class='emoji-picker', placeholder='Choose some emojis', required='true')
              div.form-group.col-xs-12.col-sm-6
                label(for='intensity') Fractal Depth
                input(type='range', id='intensity', name='intensity', min=.05, max=.5, step=1E-2, class='form-control rangeOption')
            div.row.control-group
              div.form-group.col-xs-12.col-sm-6
                label(for='size') Size
                select(id='size', name='size', class='form-control')
                  option(value='256') 256 x 256
                  option(value='512') 512 x 512
                  option(value='1024') 1024 x 1024
              div.form-group.col-xs-12.col-sm-6
                label(for='backgroundColor') Background Color
                input(type='color', name='backgroundColor', class='form-control', value='#FFFFFF')
            //- div.row.control-group
            //-   div.form-group.col-lg-6.col-lg-offset-3.controls
            //-     label(for='image') Upload Image (Preview)
            //-     input(type='file', id='image', required='true', name='image', class='form-control', placeholder='Upload an Image', accept='image/*')
            //-     img(id="selected-image", width='100%', height='200px')
            div.row
              div.form-group.col-xs-4.col-xs-offset-4.submission-row
                button(type='submit', class='btn btn-success btn-lg') Make!
            hr.start-light
    div.container.result-preview
      div.row
        div.col-lg-12.text-center
          h2 Review & Download
          hr.start-primary
      div.row
        div.col-xs-12
          div.result-container
            h4 
              a(id='download-result', class='text-center') Click to download.
                img(id="result-preview", height='300', width='300', type='image/png')
